{
  "schemaVersion": 1,
  "id": "cookingforblockheads",
  "version": "${version}",

  "name": "Cooking for Blockheads",
  "description": "Adds a cooking book and multiblock kitchens that only shows recipes you can make with what you currently have in your inventory.",
  "authors": [
    "BlayTheNinth",
    "ZerotS"
  ],
  "contact": {
    "homepage": "https://blay09.net/mods/cookingforblockheads",
    "sources": "https://github.com/ModdingForBlockheads/CookingForBlockheads",
    "issues": "https://github.com/ModdingForBlockheads/CookingForBlockheads/issues"
  },

  "license": "All Rights Reserved",
  "icon": "cookingforblockheads-icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.blay09.mods.craftingtweaks.FabricCookingForBlockheads"
    ],
    "client": [
      "net.blay09.mods.craftingtweaks.client.FabricCookingForBlockheadsClient"
    ],
    "modmenu": [
      "net.blay09.mods.craftingtweaks.compat.ModMenuIntegration"
    ],
    "rei_plugins": [
      "net.blay09.mods.craftingtweaks.compat.RoughlyEnoughItemsIntegration"
    ]
  },
  "mixins": [
    "cookingforblockheads.mixins.json"
  ],
  "depends": {
    "cloth-config2": ">=5.0.34",
    "balm-fabric": ">=1.1.0",
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/scGAfXC"
      }
    }
  }
}
